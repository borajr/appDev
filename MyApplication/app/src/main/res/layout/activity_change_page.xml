<!-- Use a vertical LinearLayout as the root to stack elements -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/profile_gradient"> <!-- Replace with your app's background color -->

    <!-- Title and instructions -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile Setup"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's add some photos to your profile!"
        android:layout_gravity="center_horizontal"/>


    <!-- Buttons for selecting images -->
    <!-- Horizontal LinearLayout for buttons -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:columnCount="3"
        android:orientation="horizontal"
        android:padding="16dp"
        android:rowCount="2">

        <!-- ImageView 1 -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="45dp"
            android:layout_height="100dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/photo_temp"
            android:padding="4dp" /> <!-- Placeholder drawable -->

        <!-- ImageView 2 -->
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="45dp"
            android:layout_height="100dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/photo_temp"
            android:padding="4dp" />

        <!-- ImageView 3 -->
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="45dp"
            android:layout_height="100dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/photo_temp"
            android:padding="4dp" />

        <!-- ImageView 4 -->
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="45dp"
            android:layout_height="100dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/photo_temp"
            android:padding="4dp" />

        <!-- ImageView 5 -->
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="45dp"
            android:layout_height="100dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/photo_temp"
            android:padding="4dp" />

        <!-- ImageView 6 -->
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="45dp"
            android:layout_height="100dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/photo_temp"
            android:padding="4dp" />

    </GridLayout>

    <Button
        android:id="@+id/changepass"
        android:layout_width="164dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/rounded_rectangle"
        android:text="change password"
        android:textColor="#000000"
        android:layout_marginTop="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="About You: "
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <!-- Choose Photo from Library Button -->
        <Button
            android:id="@+id/basics"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Basics"
            android:background="@drawable/rounded_rectangle"
            android:textColor="#000000"
            android:layout_marginEnd="8dp" />

        <!-- Take a Photo Button -->
        <Button
            android:id="@+id/info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Additional Information"
            android:background="@drawable/rounded_rectangle"
            android:textColor="#000000"
            android:layout_marginStart="8dp" />

        <Button
            android:id="@+id/lifestyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Lifestyle"
            android:background="@drawable/rounded_rectangle"
            android:textColor="#000000"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Image placeholders -->
    <!-- Use a GridLayout or similar to arrange your image placeholders -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="Your Preferences: "
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Choose Photo from Library Button -->
        <Button
            android:id="@+id/Basics2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_rectangle"
            android:text="Basics"
            android:textColor="#000000" />

        <!-- Take a Photo Button -->
        <Button
            android:id="@+id/info2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_rectangle"
            android:text="Additional Information"
            android:textColor="#000000" />

        <Button
            android:id="@+id/lifestyle2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_rectangle"
            android:text="Lifestyle"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- Continue button -->
    <Button
        android:id="@+id/btn_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:background="@drawable/pink_rounded"
        android:text="Continue"
        android:textColor="#ffffff" />

</LinearLayout>
