<!-- Use a vertical LinearLayout as the root to stack elements -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/profile_gradient"> <!-- Replace with your app's background color -->

    <!-- Title and instructions -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile Setup"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's add some photos to your profile!"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"/>

    <!-- Image placeholders -->
    <!-- Use a GridLayout or similar to arrange your image placeholders -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:columnCount="3"
        android:rowCount="2"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <!-- ImageView 1 -->
        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/photo_temp" /> <!-- Placeholder drawable -->

            <Button
                android:id="@+id/imageViewCloseBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:text="X"
                android:background="@android:color/transparent"
                android:textColor="#FF0000" />
        </FrameLayout>


        <!-- ImageView 2 -->
        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/photo_temp" /> <!-- Placeholder drawable -->

            <Button
                android:id="@+id/imageViewCloseBtn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:text="X"
                android:background="@android:color/transparent"
                android:textColor="#FF0000" />
        </FrameLayout>

        <!-- ImageView 3 -->
        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/photo_temp" /> <!-- Placeholder drawable -->

            <Button
                android:id="@+id/imageViewCloseBtn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:text="X"
                android:background="@android:color/transparent"
                android:textColor="#FF0000" />
        </FrameLayout>

        <!-- ImageView 4 -->
        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/photo_temp" /> <!-- Placeholder drawable -->

            <Button
                android:id="@+id/imageViewCloseBtn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:text="X"
                android:background="@android:color/transparent"
                android:textColor="#FF0000" />
        </FrameLayout>

        <!-- ImageView 5 -->
        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/photo_temp" /> <!-- Placeholder drawable -->

            <Button
                android:id="@+id/imageViewCloseBtn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:text="X"
                android:background="@android:color/transparent"
                android:textColor="#FF0000" />
        </FrameLayout>

        <!-- ImageView 6 -->
        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/photo_temp" /> <!-- Placeholder drawable -->

            <Button
                android:id="@+id/imageViewCloseBtn5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:text="X"
                android:background="@android:color/transparent"
                android:textColor="#FF0000" />
        </FrameLayout>

    </GridLayout>


    <!-- Buttons for selecting images -->
    <!-- Horizontal LinearLayout for buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <!-- Choose Photo from Library Button -->
        <Button
            android:id="@+id/btn_choose_photo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Choose photo from library"
            android:background="@drawable/rounded_rectangle"
            android:textColor="#000000" 
            android:layout_marginEnd="8dp" />

        <!-- Take a Photo Button -->
        <Button
            android:id="@+id/btn_take_photo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Take a photo"
            android:background="@drawable/rounded_rectangle"
            android:textColor="#000000"
            android:layout_marginStart="8dp" />
    </LinearLayout>


    <!-- Continue button -->
    <Button
        android:id="@+id/btn_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:background="@drawable/pink_rounded"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"
        android:layout_marginTop="32dp"/>

</LinearLayout>
