<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:screenOrientation="portrait">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/logo_top_margin" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/logo_to_first_element_margin"
        android:gravity="start"
        android:text="Email"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/editText1"
        app:layout_constraintStart_toStartOf="@id/editText1"
        app:layout_constraintTop_toBottomOf="@id/imageView" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:ems="10"
        android:inputType="text|textNoSuggestions"
        android:maxLines="1"
        android:padding="8dp"
        android:hint="Enter Email"
        android:background="@drawable/signup_rectangle"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView1"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="@dimen/between_elements_spacing" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="18sp"
        android:gravity="start"
        app:layout_constraintStart_toStartOf="@id/editText2"
        app:layout_constraintEnd_toEndOf="@id/editText2"
        app:layout_constraintTop_toBottomOf="@id/editText1"
        android:layout_marginTop="@dimen/element_spacing" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:ems="10"
        android:inputType="textPassword"
        android:maxLines="1"
        android:padding="8dp"
        android:hint="Enter Password"
        android:background="@drawable/signup_rectangle"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="@dimen/between_elements_spacing" />

    <Button
        android:id="@+id/loginbutton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:background="@drawable/rounded_rectangle"
        android:text="LOG IN"
        android:textColor="#ffffff"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editText2"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintVertical_bias="0.9"
        android:layout_marginTop="@dimen/button_spacing" />

    <Button
        android:id="@+id/button3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:background="@drawable/rounded_rectangle"
        android:text="Trouble Signing In?"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loginbutton"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintVertical_bias="0.1"
        android:layout_marginTop="@dimen/between_elements_spacing" />





</androidx.constraintlayout.widget.ConstraintLayout>
