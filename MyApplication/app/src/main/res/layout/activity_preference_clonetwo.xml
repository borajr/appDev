<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_gradient">

    <!-- TextViews -->

    <!-- Preferred Gender -->

    <TextView
        android:id="@+id/Tellus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Tell us about your ideal type"
        android:textColor="#000000"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.451"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:text="Preferred Gender:"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Tellus" />

    <Spinner
        android:id="@+id/editText1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/between_elements_spacing"
        android:background="@drawable/rounded_spinner"
        android:entries="@array/gender"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@+id/Gender"
        app:layout_constraintStart_toStartOf="@+id/Gender"
        app:layout_constraintTop_toBottomOf="@id/Gender"/>
    <!-- Height -->


    <TextView
        android:id="@+id/Height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/element_spacing"
        android:text="Height"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editText1" />


    <Spinner
        android:id="@+id/minHeightSpinner"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:entries="@array/height"
        android:background="@drawable/rounded_spinner"
        app:layout_constraintStart_toStartOf="@+id/minAgeSpinner"
        app:layout_constraintEnd_toStartOf="@+id/gap2"
        app:layout_constraintTop_toBottomOf="@+id/Height"
        app:layout_constraintWidth_default="wrap" />

    <Space
        android:id="@+id/gap2"
        android:layout_width="16dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/minHeightSpinner"
        app:layout_constraintEnd_toStartOf="@+id/maxHeightSpinner"
        app:layout_constraintTop_toTopOf="@+id/minHeightSpinner" />

    <Spinner
        android:id="@+id/maxHeightSpinner"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:entries="@array/height"
        android:background="@drawable/rounded_spinner"
        app:layout_constraintStart_toEndOf="@+id/gap2"
        app:layout_constraintEnd_toEndOf="@+id/maxAgeSpinner"
        app:layout_constraintTop_toTopOf="@+id/minHeightSpinner"
        app:layout_constraintWidth_default="wrap" />


    <TextView
        android:id="@+id/star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/element_spacing"
        android:text="Star Sign"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/minHeightSpinner"
        app:layout_constraintVertical_bias="0.051" />

    <!-- Age window -->

    <Spinner
        android:id="@+id/editText3"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="@dimen/between_elements_spacing"
        android:background="@drawable/rounded_spinner"
        android:entries="@array/star_signs"
        android:hint="  Enter star sign"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/Gender"
        app:layout_constraintStart_toStartOf="@+id/Gender"
        app:layout_constraintTop_toBottomOf="@id/star" />

    <TextView
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/element_spacing"
        android:text="Age window"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editText3"
        app:layout_constraintVertical_bias="0.019" />

    <!-- Academic year -->
    <Spinner
        android:id="@+id/minAgeSpinner"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/rounded_spinner"
        android:entries="@array/age_range"
        app:layout_constraintStart_toEndOf="@id/Height"
        app:layout_constraintEnd_toStartOf="@+id/gap"
        app:layout_constraintTop_toBottomOf="@+id/age"
        app:layout_constraintWidth_default="wrap" />

    <Space
        android:id="@+id/gap"
        android:layout_width="16dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/minAgeSpinner"
        app:layout_constraintEnd_toStartOf="@+id/maxAgeSpinner"
        app:layout_constraintTop_toBottomOf="@+id/age"
        app:layout_constraintWidth_default="wrap"/>

    <Spinner
        android:id="@+id/maxAgeSpinner"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/rounded_spinner"
        android:entries="@array/age_range"
        app:layout_constraintStart_toEndOf="@+id/gap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/age"
        app:layout_constraintWidth_default="wrap" />


    <TextView
        android:id="@+id/year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/element_spacing"
        android:text="Academic Program"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/maxAgeSpinner"
        app:layout_constraintVertical_bias="0.0" />

    <!-- Language -->

    <EditText
        android:id="@+id/editText5"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="@dimen/between_elements_spacing"
        android:background="@drawable/signup_rectangle"
        android:hint="  Enter study program"
        android:textColor="#000000"
        android:inputType="text|textNoSuggestions"
        android:maxLines="1"
        android:lines="1"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/Gender"
        app:layout_constraintStart_toStartOf="@+id/Gender"
        app:layout_constraintTop_toBottomOf="@id/year" />

    <TextView
        android:id="@+id/language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/element_spacing"
        android:text="Language"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editText5"
        app:layout_constraintVertical_bias="0.0" />

    <!-- Confirm Button -->

    <EditText
        android:id="@+id/edittext7"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="@dimen/between_elements_spacing"
        android:background="@drawable/signup_rectangle"
        android:hint="  Enter language"
        android:textColor="#000000"
        android:inputType="text|textNoSuggestions"
        android:maxLines="1"
        android:lines="1"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/Gender"
        app:layout_constraintStart_toStartOf="@+id/Gender"
        app:layout_constraintTop_toBottomOf="@id/language" />

    <Button
        android:id="@+id/confirm_button"
        android:layout_width="309dp"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/element_spacing"
        android:background="@drawable/pink_rounded"
        android:text="Confirm"
        android:textColor="#ffffff"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edittext7"
        app:layout_constraintWidth_percent="0.8" />

    <!-- Button3 -->

</androidx.constraintlayout.widget.ConstraintLayout>